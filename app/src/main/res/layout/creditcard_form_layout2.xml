<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/creditCardLogo"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/ic_credit_card"
            android:contentDescription="PayPal Logo"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay with Credit Card"
            android:fontFamily="@font/poppins_bold"
            android:textSize="27sp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please fill the required fields."
            android:fontFamily="@font/poppins"
            android:textSize="17sp"
            android:textColor="#888888"
            android:layout_marginBottom="16dp" />


        <EditText
            android:id="@+id/edit_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Number"
            android:inputType="number"
            android:maxLength="16"
            android:fontFamily="@font/poppins"
            android:textSize="20sp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edit_expiry_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MM/YY"
            android:inputType="text"
            android:fontFamily="@font/poppins"
            android:textSize="20sp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edit_cvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CVC"
            android:inputType="numberPassword"
            android:maxLength="3"
            android:fontFamily="@font/poppins"
            android:textSize="20sp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edit_cardholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cardholder Name"
            android:inputType="textPersonName"
            android:fontFamily="@font/poppins"
            android:textSize="20sp"
            android:layout_marginBottom="24dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_buy_ticket"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Buy Ticket"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins"
            android:background="@drawable/main_button"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
